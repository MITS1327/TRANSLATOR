{
  "compilerOptions": {
    "outDir": "./build",
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ES2022",
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "app": ["./app"],
      "app/*": ["./app/*"],

      "entities": ["./entities"],
      "entities/*": ["./entities/*"],


      "features": ["./features"],
      "features/*": ["./features/*"],


      "pages": ["./pages"],
      "pages/*": ["./pages/*"],


      "shared": ["./shared"],
      "shared/*": ["./shared/*"],


      "widgets": ["./widgets"],
      "widgets/*": ["./widgets/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  },
  "include": ["src", "declarations.d.ts", "webpack"],
  "exclude": ["node_modules", "build", "mcn-ui-components", "coverage-ts"]
}
