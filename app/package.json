{
  "name": "translator",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "libs/shared/",
      "libs/messaging/",
      "libs/core/",
      "libs/infrastructure/",
      "api/"
    ]
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start-api:dev": "nest start --watch api",
    "start-api:prod": "node dist/api/src/main",
    "lint": "prettier --write \"{api,libs}/**/*.ts\" && eslint \"{api,libs}/**/*.ts\" --fix --max-warnings 0",
    "type-coverage": "typescript-coverage-report --ignore-files 'dist/**/*.*'",
    "type-coverage:console": "type-coverage --ignore-files 'dist/**/*.*' --detail",
    "migration:up": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ormconfig.ts",
    "migration:down": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ormconfig.ts",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ormconfig.ts",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "prepare": "cd ../ && husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "cache-manager": "^5.3.1",
    "cache-manager-ioredis-yet": "^1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "graylog2": "^0.2.1",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "redlock": "^5.0.0-beta.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@types/cache-manager": "^4.0.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "type-coverage": "^2.27.0",
    "typescript": "^5.3.2",
    "typescript-coverage-report": "^0.8.0"
  },
  "config": {
    "commitizen": {
      "path": "app/commitizen.js"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "typescript-coverage-report"
    ]
  }
}
