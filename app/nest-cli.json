{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "./",
  "root": "./",
  "projects": {
    "api": {
      "type": "application",
      "root": "api",
      "entryFile": "main",
      "sourceRoot": "api/src",
      "compilerOptions": {
        "tsConfigPath": "api/tsconfig.app.json"
      }
    }
  }
}